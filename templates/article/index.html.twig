{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
   {{ parent() }}
<div class="container">  
<div class="row mt-3">
{% for article in articles %}

  <div class="col-2 col-sm-3 col-lg-4 mb-3 d-flex align-items-stretch">
    <div class="card">
        <img class="card-img-top h-50" src="{{uploaded_asset(article.imagePath)|imagine_filter('squared_thumbnail_small') }}" alt="Card image cap">
        <div class="card-title">
            <h3 class="card-text bg-info text-white text-capitalize font-weight-bold mt-2">{{ article.title }} </h3>
        </div>
        <div class="card-body d-flex flex-column justify-content-between flex-wrap">
            <p class="card-text">{{ article.body }} </p>
            <p class="card-text">{{ article.fileName }} </p>
             <a href="{{ path('app_article_edit', {id:article.id}) }}" class="btn btn-primary">Edit Article</a>
        </div>
    </div>
    </div>

    
{% endfor %}
</div>
</div>
{% endblock %}
