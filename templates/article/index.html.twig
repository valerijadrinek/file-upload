{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
   {{ parent() }}
<div class="container">  
<div class="row mt-3">
{% for article in articles %}

  <div class="col-2 col-sm-3 col-lg-4 mb-3 d-flex align-items-stretch">
    <div class="card">
        <img class="card-img-top" src="{{ asset(article.imagePath) }}" alt="Card image cap">
        <div class="card-title">
            <p class="card-text bg-info text-white text-capitalize font-weight-bold mt-2">{{ article.title }} </p>
        </div>
        <div class="card-body">
            <p class="card-text">{{ article.body }} </p>
        </div>
        <div class="card-body">
            <p class="card-text">{{ article.fileName }} </p>
        </div>
    </div>
    </div>

    
{% endfor %}
</div>
</div>
{% endblock %}
