{% extends 'base.html.twig' %}
{% block title %}Form for Edit{% endblock %}
{% block body %}
    <h1>Form for fake upload</h1>
     <div class="row">
        <div class="col-sm-8">
            <h3>Details</h3>
                {{ include('/form/_form_article.html.twig',  {
                    button_text: 'Update!'
            }) }}
        </div>

        <div class="col-sm-4">
            <h3>References</h3>
                 <ul class="list-group small js-reference-list" data-url="{{ path('app_article_list_references', {id: article.id}) }}">
                 </ul>
                
                <hr>
              <form action="{{ path('app_article_reference_add', {id:article.id}) }}" method="POST" enctype="multipart/form-data" class="dropzone js-reference-dropzone">
               
            </form>
        </div>
    </div>
    <hr>
