{% extends 'base.html.twig' %}
{% block title %}Form for Edit{% endblock %}
{% block body %}
    <h1>Form for fake upload</h1>
     <div class="row">
        <div class="col-sm-8">
            <h3>Details</h3>
                {{ include('/form/_form_article.html.twig',  {
                    button_text: 'Update!'
            }) }}
        </div>

        <div class="col-sm-4">
            <h3>References</h3>
                <ul class="list-group small">
                    {% for reference in article.articleReferences %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ reference.originalFilename }}
                            <span>
                                <a href="{{ path('app_article_reference_download', {
                                    id: reference.id
                                }) }}"><span class="fa fa-download"></span></a>
                            </span>
                        </li>
                    {% endfor %}
                </ul>
              <form action="{{ path('app_article_reference_add', {id:article.id}) }}" method="POST" enctype="multipart/form-data" class="dropzone js-reference-dropzone">
               
            </form>
        </div>
    </div>
    <hr>
{% endblock %}
{% block javascript %}
     <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.js" integrity="sha256-cs4thShDfjkqFGk5s2Lxj35sgSRr4MRcyccmi0WKqCM=" crossorigin="anonymous"></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.css" integrity="sha256-e47xOkXs1JXFbjjpoRr1/LhVcqSzRmGmPqsrUQeVs+g=" crossorigin="anonymous" />

{% endblock %}
{% endblock %}